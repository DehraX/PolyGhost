    {{#if @blog.navigation}}
    <paper-tabs scrollable flex class="flex bottom self-end" selected="{{slug}}" attrForSelected="slug">
        {{#foreach navigation}}
            <paper-tab link slug="{{slug}}" class="link nav-{{slug}}{{#if current}} nav-current{{/if}} flex-1" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></paper-tab>
        {{/foreach}}
    </paper-tabs>
    {{/if}}
 
